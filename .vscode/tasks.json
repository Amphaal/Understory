{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "2. Generate Project files",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "type": "shell",
            "command": "cmake -GNinja -B_genDebug -H. -DCMAKE_TOOLCHAIN_FILE=cmake/toolchains/msys2.cmake"
        },
        {
            "label": "3. Build",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            },
            "problemMatcher": []
        }
    ]
}