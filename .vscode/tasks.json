{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "1. Generate Project files",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "type": "shell",
            "command": "cmake -GNinja -Bbuild -H. -DLOCAL_TESTING=ON -DBUILD_TESTING=ON -DCMAKE_TOOLCHAIN_FILE=cmake/toolchains/msys2.cmake",
            "osx" : {
                "command": "cmake -GNinja -Bbuild -H. -DLOCAL_TESTING=ON -DBUILD_TESTING=ON -DCMAKE_TOOLCHAIN_FILE=cmake/toolchains/osx.cmake",
            }
        },
        {
            "label": "2. Build",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "a. Package",
            "type": "shell",
            "command": "cmake -GNinja -B_pkg -H. -DCMAKE_TOOLCHAIN_FILE=cmake/toolchains/windows-ci.cmake && ninja -C_pkg package",
            "problemMatcher": []
        }
    ]
}